<odoo>
    <template id="clear_cart" name="Clear Cart"
              inherit_id="website_sale.cart_lines">
        <xpath expr="//table[@id='cart_products']" position="after">
            <form action="/action_clear" method="POST">
            <div class="here">
                <button type="submit" role="button" class="btn btn-secondary btn position mb32 item-button">
                    <span>Clear Cart</span>
                </button>
            </div>
            </form>
        </xpath>
    </template>
</odoo>
